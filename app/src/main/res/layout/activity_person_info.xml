<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_gravity="center">

    <TextView
        android:id="@+id/personInfo"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <Button
        android:text="Click to report positive test for patient
        \nAnd send individual SMS notification to patient only"
        android:onClick="onIndividualButtonClickPos"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <Button
        android:text="Click to report negative test for patient
        \nAnd send individual SMS notification to patient only"
        android:onClick="onIndividualButtonClickNeg"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <Button
        android:text="Click to report positive test for patient
        \nAnd send anonymous SMS alerts to everyone in the region"
        android:onClick="onAlertButtonClick"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

</LinearLayout>